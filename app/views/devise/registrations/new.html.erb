<div class="center">


<div class="container">

<div class="box shadow5" style="padding:3%; border:solid 10px white; border-radius:20px 20px; color:#E4B4C2">

<p style='font-size:18px'>SIGN UP</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div style="margin-top:20px">
    <p style='font-size:12px'>EMAIL</p>
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", style:'color:#E4B4C2;border:#E4B4C2' %>
  </div>


  <div style="margin-top:20px">
    <p style='font-size:12px'>PASSWORD</p>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <p style='font-size:12px'> <%= @minimum_password_length %> CHARACTERS MINIMUM</p>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", style:'color:#E4B4C2;border:#E4B4C2' %>
  </div>

  <div style="margin-top:20px">
    <p style='font-size:12px'>PASSWORD CONFIRMATION</p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", style:'color:#E4B4C2;border:#E4B4C2' %>
    <%= f.submit "Sign up", style:'color:#E4B4C2;border:#E4B4C2' %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
