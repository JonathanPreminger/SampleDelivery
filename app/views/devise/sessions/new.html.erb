<h2 style="margin-top:100px;font-family: 'CothamSans';">Log in</h2>
<div style="margin-left:50px;">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label :email %><br />
    <p>Email : </p><%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    <%= f.label :password %><br />
    <p>Password : </p><%= f.password_field :password, autocomplete: "current-password" %>

  <% if devise_mapping.rememberable? %>
      <p>Remember me ? :</p><%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
  <% end %>

<div class="">


    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
