<div class="form-create-artist">

  <div class="container-edit">
    <div class="carreblanc">
      <div class="form">
        <%= form_for @artist, remote: true do |f| %>
          <div class="row-edit">
            <p>Name</p>
            <p>
            <%= f.text_field :name %><br>
            </p>
          </div>
          <div class="row-edit">
            <p>Image</p>
            <p>
            <%= f.file_field :image %><br>
            </p>
          </div>
        <%= f.submit %>
      </div>
      <% end %>
    </div>
  </div>

</div>
