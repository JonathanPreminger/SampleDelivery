<div class="container-edit">
  <div class="carreblanc">
    <div class="form">
      <%= form_for @artist do |f| %>
        < <p>Image</p>
          <p>
          <%= f.file_field :image, class:"file-field-new-artist" %><br>
          </p>
        <%= f.fields_for :realreleases, Realrelease.new do |realrelease_form| %>
        <div class="row-edit">
          <p>Add a release</p>
          <p>for  <%= @artist.name %></p>
          <p>
            <p>NAME</p>
            <%= realrelease_form.text_field :name, :placeholder => "Name of the release" %>
            <p>YEAR</p>
            <%= realrelease_form.text_field :year,:placeholder =>  "Year of the release" %>
            <p>COVER</p>
            <%= realrelease_form.file_field :image %>
          </p>
        </div>
        <% end %>

        <%= image_submit_tag 'save.png' %>

    </div>
    <% end %>
  </div>
</div>
