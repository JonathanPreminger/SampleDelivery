<%=flash[:notice]%>
<table class="table">
    <thead class="titre">
      <tr class="elementoftitle">
        <th class="element-title"><p>Title</p><p>:</p></th>
        <th class="element-title"><p>Content</p><p>:</p></th>

      </tr>

  </thead>


  <tbody class="content">
    <% @articles.each do |article| %>
      <tr class="elementofcontent">
        <td class="element"><%= article.title %></td>
        <td class="element"><%= article.content %></td>
        <td class="element"><%= link_to 'Edit', edit_article_path(article), class:"icone-in-table" %></td>
        <td class="element"><%= link_to 'Show', article, class:"icone-in-table" %></td>
        <td class="element" id="icone-in-table"><%= link_to image_tag('delete.png', size: "32x32"), article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class:"icone-in-table" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
